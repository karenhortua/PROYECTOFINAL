
from list import LinkedList

my_list = LinkedList()

my_list.add(2)
my_list.add("Hola")
my_list.add(5)

my_list.print_list()

print("Size:", my_list.length)

#EJEMPLO

class Node:
  def __init__(self, cargo = None, next = None):
    self.cargo = cargo
    self.next = next

  def __str__(self):
    return str(self.cargo)


class LinkedList:
  def __init__(self):
    self.head = None
    self.last = None
    self.length = 0

  def add(self, value):
    new_node = Node(value)
    
    if self.head == None:
      self.head = new_node
    else:
      self.last.next = new_node
    
    self.last = new_node
    self.length += 1

  def print_list(self):
    node = self.head
    while node is not None:
      char = ", " if node.next is not None else ""
      print(node, end = char)
      node = node.next
    print()

